{
    "name": "vscode-extendscript",
    "displayName": "ExtendScript",
    "description": "Adobe ExtendScript Language Support for Visual Studio Code",
    "version": "0.0.1",
    "author": "Red J",
    "publisher": "magicpro1994",
    "repository": {
        "type": "git",
        "url": "https://github.com/MagicPro1994/vscode-extendscript.git"
    },
    "bugs": {
        "url": "https://github.com/MagicPro1994/vscode-extendscript/issues"
    },
    "engines": {
        "vscode": "^1.22.0"
    },
    "categories": [
        "Languages",
        "Snippets",
        "Linters"
    ],
    "activationEvents": [
        "onLanguage:extendscript"
    ],
    "main": "./out/extension",
    "contributes": {
        "languages": [
            {
                "id": "extendscript",
                "aliases": [
                    "ExtendScript",
                    "extendscript"
                ],
                "extensions": [
                    ".jsx",
                    ".jsxinc"
                ],
                "filenames": [
                    "tslint.json"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [{
            "language": "jsx",
            "scopeName": "source.jsx",
            "path": "./syntaxes/jsx.tmLanguage"
        }],
        "snippets": [
            {
                "language": "jsx",
                "path": "./snippets/snippets.json"
            }]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.6.1",
        "vscode": "^1.1.6",
        "tslint": "^5.8.0",
        "@types/node": "^7.0.43",
        "@types/mocha": "^2.2.42"
    }
}